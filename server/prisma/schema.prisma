datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int       @id @default(autoincrement())
  username String    @unique
  password String
  role     String
  email    String    @unique
  phone    String?
  patients Patient[]
  doctors  Doctor[]
}

model Patient {
  id           Int             @id @default(autoincrement())
  userId       Int
  user         User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName    String
  lastName     String
  dob          DateTime
  gender       String
  address      String
  records      MedicalRecord[]
  appointments Appointment[]
}

model Doctor {
  id             Int             @id @default(autoincrement())
  userId         Int
  user           User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName      String
  lastName       String
  specialization String
  availability   String // JSON representing the schedule
  appointments   Appointment[]
  MedicalRecord  MedicalRecord[]
}

model Appointment {
  id              Int      @id @default(autoincrement())
  patientId       Int
  patient         Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctorId        Int
  doctor          Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  appointmentDate DateTime
  startTime       DateTime
  endTime         DateTime
  status          String
}

model MedicalRecord {
  id          Int      @id @default(autoincrement())
  patientId   Int
  patient     Patient  @relation(fields: [patientId], references: [id], onDelete: Cascade)
  dateOfVisit DateTime
  doctorId    Int
  doctor      Doctor   @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  diagnosis   String
  treatment   String
}
